.screen{
    width:100%;
    height:300rpx;
    background:pink;
    color:#fff;
    position:relative;
}
.screen .result{
    position:absolute;
    right:30rpx;
    bottom:20rpx;
    font-size:50px;
}
.control{
    background:#bababa;
    overflow: hidden;
}
.control .button{
    width:25%;
    height:187rpx;
    box-sizing:border-box;
    border-bottom:1px solid #eee;
    border-right:1px solid #eee;
    border-left:1px solid #fff;
    float:left;
    line-height: 187rpx;
    text-align: center;
    font-size:25px;
    font-weight:600;
    /*border-radius:15px;*/
}
.control .w{
    width:50%;
}
.control .w:hover{
   background:red;
}